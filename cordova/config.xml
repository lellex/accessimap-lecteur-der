<?xml version='1.0' encoding='utf-8'?>
<widget id="com.makinacorpus.mapsense" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MapSense</name>
    <description>
        MapSense - Lecteur de documents en relief.
    </description>
    <author email="alexandra.janin@makina-corpus.com" href="http://makina-corpus.com">
        Makina Corpus
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-tts" spec="~0.2.3" />
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.1" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
</widget>
